<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.xuli.toe.dao.IRoleDao">
    <select id="getRoleByRoleName" parameterType="String">
        SELECT
        `roleId`,
        `roleName`,
        `description`,
        `status`
        FROM `role`
        WHERE `roleName` = #{roleName};
    </select>

    <insert id="insertRelationShip" parameterType="team.xuli.toe.domain.RelationBtwUserAndRole">
        INSERT INTO `r_user_role`
        (`roleId`,
        `userId`)
        VALUES
        (#{roleId},
        #{userId});

    </insert>
</mapper>

